{
   "extends": "stylelint-config-standard",
   "rules": {
      "indentation": 3,
      "declaration-block-single-line-max-declarations": 2,
      "selector-class-pattern":null,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ],
      "declaration-block-trailing-semicolon": null,
      "no-descending-specificity": null
    }
 }